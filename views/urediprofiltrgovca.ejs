    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
<div class="header">

    <div class="header-right">
        <a class="active" href="/trgovac">Poƒçetna</a>

        <a onclick="window.location.href='/trgovac/pricaj/chat'">Chat</a>
    </div>
</div>

<div class="container glavni">
    <div class="row">

        <div class="col-sm-12">
            <form method="post" action="/urediprofiltrgovca" enctype="multipart/form-data">
                <h3>Uredi profil</h3>
                <label for="naziv">Naziv</label>
                <input type="text" name="naziv" value="<%= podaci[0].naziv %>"><br>

                <label for="telefon">Telefon</label>
                <input type="text" name="telefon" value="<%= podaci[0].telefon %>"><br>

                <label for="email">Email</label>
                <input type="text" name="email" value="<%= podaci[0].email %>"><br>

                <label for="adresa">Adresa</label>
                <input type="text" name="adresa" value="<%= podaci[0].adresa %>"><br>

                <label for="grad">Grad</label>
                <input type="text" name="grad" value="<%= podaci[0].grad %>"><br>

                <label for="sampleFile">Profilna slika: </label>
                <input type="file" name="sampleFile" accept="image/*"><br>
                <button type="submit" class="btn btn-dark">Submit</button>
            </form>


        </div>
    </div>


</div>

</body>
</html>