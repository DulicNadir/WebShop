<!DOCTYPE html>
<html>
<head>
    <title>Moja trgovina</title>
    <link rel='stylesheet' href='/stylesheets/urediart.css'/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script>
        function spasi(ime, kategorija, cijena, opis, id) {
            let art = document.getElementById(ime).value;
            let kat = document.getElementById(kategorija).value;
            let cijena1 = document.getElementById(cijena).value;
            let opis1 = document.getElementById(opis).value;
            let ide = document.getElementById(id).value;

            $.ajax({
                method: "POST",
                url: "/trgovac/uredi/" + art + "/" + kat + "/" + cijena1 + "/" + opis1 + "/" + ide,
                data: {}
            });
        }

    </script>
</head>
<body>
<div class="container glavni">
    <form method="post" action="/uredi" enctype="multipart/form-data">
        <label for="artikal">Naziv artikla: </label><br>
        <input type="text" value="<%= sve[0].artikal %>" name="artikal" class="form-control"><br>
        <label for="kategorija">Kategorija: </label><br>
        <select name="kategorija" class="form-control">
            <% for(let i = 0;i < grupee.length;i++){ %>
            <option><%= grupee[i].naziv %></option>
            <% } %>

        </select><br>
        <label for="cijena">Cijena: </label><br>
        <input type="number" value="<%= sve[0].cijena %>" name="cijena" class="form-control"><br>
        <label for="opis">Opis: </label><br>
        <textarea rows="5" cols="30" name="opis" class="form-control"><%= sve[0].opis %></textarea><br>
        <input type="text" name="ajd" value="<%= sve[0].ajd %>" class="hide">
        <label for="sampleFile">Slika: </label>
        <input type="file" name="sampleFile" accept="image/*">
        <br>

        <button type="submit" class="btn btn-success">Submit</button>
    </form>
    <br>
    <button onclick="window.location.href='/trgovac'" class="btn btn-danger">Odbaci</button>
</div>
</body>
</html>