    <style>
        img {
            width: 100px;
            height: 100px;
        }
    </style>
    <script>
        function naruci(idArtikla) {

            $.ajax({
                method: "POST",
                url: "/naruciartikal/" + idArtikla,
                data: {}
            }).done(function () {

            });
        }

    </script>
</head>
<body>
<div class="header">

    <div class="header-right">
        <a class="active" href="/kupac">Poƒçetna</a>
        <a onclick="window.location.href='/profilkupca'">Profil</a>
        <a onclick="window.location.href='/kupac/profil/korpa'">Korpa</a>
    </div>
</div>
<div class="container-fluid artikli">

    <div class="row">

        <div class="col-sm-6 col-md-3 mjestoart">
            <div class="proba">
                <figure class="figure">
                    <img src="/images/<%= slika %>" class="slikart img-fluid"><br>
                    <div class="opis">
                        <p id="<%= sve[0].idart %>">Naziv artikla: <%= sve[0].artikal %></p>
                        <p>Kategorija: <%= sve[0].grupa %></p>
                        <p>Cijena: <%= sve[0].cijena %> KM</p>
                        <p>Opis: <%= sve[0].opis %></p>
                        <a href="/kupac/<%= sve[0].naziv %>"><%= sve[0].naziv %></a>
                    </div>
                    <button class="btn btn-success" onclick="naruci('<%= sve[0].idart %>')">Dodaj u korpu</button>
                </figure>
                <br>

            </div>

        </div>


    </div>
</div>


</body>
</html>